%div#form{ align: 'center' }
  = form_tag finance_report_path, method: 'get' do
    %br
    = label_tag :from
    = date_select :from, :date,
                  start_year: 2021, end_year: Date.today.year, default: @from_date

    = label_tag :to
    = date_select :to, :date,
                  start_year: 2021, end_year: Date.today.year, default: @to_date
    %br
    .form-actions
      %button.btn.btn-info#button{ type: 'submit' }
        %i.icon-white Calculate

%table{ align: 'center' }
  %tr
    %th{ title: '' } 1
  %tr
    %td{ title: '' } 1
  %tr
    %td{ title: '' } 1
  %tr
    %td{ title: '' } 1
  %tr
    %td{ title: '' } 1

:css
  table {
    font-size: 14pt;
    border-collapse: collapse;
    width: 70%;
  }

  table td, table th {
    text-align: center;
    border: 1px solid #ddd;
    padding: 8px;
  }

  table .first_column {
    text-align: left;
  }

  table tr:nth-child(even){background-color: #f2f2f2;}

  table tr:hover {background-color: #ddd;}

  table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: center;
    background-color: #428bca;
    color: white;
  }

  #form {
    padding-top: 12px;
    padding-bottom: 12px;
  }
  #button {
    width: 20%;
    font-size: 14pt;
    margin-top: 12px;
    margin-bottom: 12px;
  }
