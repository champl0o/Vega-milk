%div#form{ align: 'center' }
  = form_tag salary_report_path, method: 'get' do
    %br
    = label_tag :from
    = date_select :from, :date,
                  start_year: 2021, end_year: Date.today.year, default: @from_date

    = label_tag :to
    = date_select :to, :date,
                  start_year: 2021, end_year: Date.today.year, default: @to_date
    %br
    .form-actions
      %button.btn.btn-info#button{ type: 'submit' }
        %i.icon-white Calculate

%h3{ align: 'center' }
  Employees salary
  |
  = (@employees.sum(&:salary_per_day) * @days).round(3)

%table{ align: 'center' }
  %tr
    %th Title
    %th Email
    %th Phone
    %th Month salary
    %th Begin Date

  - @employees.each do |employee|
    %tr
      %td.align-left= employee.name
      %td.align-right= employee.email
      %td.align-right= employee.phone
      %td.align-right= employee.salary
      %td.align-right= employee.begin_date

%br
%br

:css
  table {
    font-size: 14pt;
    border-collapse: collapse;
    width: 70%;
  }

  table td, table th {
    text-align: center;
    border: 1px solid #ddd;
    padding: 8px;
  }

  table .align-left {
    text-align: left;
  }

  table .align-right {
    text-align: right;
  }

  table tr:nth-child(even){background-color: #f2f2f2;}

  table tr:hover {background-color: #ddd;}

  table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: center;
    background-color: #428bca;
    color: white;
  }

  #form {
    padding-top: 12px;
    padding-bottom: 12px;
  }
  #button {
    width: 20%;
    font-size: 14pt;
    margin-top: 12px;
    margin-bottom: 12px;
  }
